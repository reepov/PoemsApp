<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="30dp">
    <TextView
        android:id="@+id/textRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Регистрация"
        tools:ignore="HardcodedText"
        android:textSize="40sp" />
    <EditText
        android:id="@+id/enterNickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textRegister"
        android:hint="Никнейм"
        tools:ignore="Autofill,HardcodedText,TextFields"
        android:layout_marginTop="50dp"
        />

    <EditText
        android:id="@+id/enterLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/enterNickname"
        android:layout_marginTop="20dp"
        android:hint="Адрес электронной почты"
        tools:ignore="Autofill,HardcodedText,TextFields" />
    <EditText
        android:id="@+id/enterPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/enterLogin"
        android:hint="Пароль"
        tools:ignore="Autofill,HardcodedText"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        />
    <EditText
        android:id="@+id/enterPasswordSecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/enterPassword"
        android:hint="Повторите пароль"
        tools:ignore="Autofill,HardcodedText"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        />
    <Button
        android:id="@+id/signIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/enterPasswordSecond"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text=" Зарегистрироваться "
        tools:ignore="HardcodedText"
        android:textSize="15sp"
        android:backgroundTint="#ffcc99"/>
    <TextView
        android:id="@+id/textIfSignedIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Уже есть аккаунт?"
        tools:ignore="HardcodedText"
        android:textSize="12sp"
        android:layout_below="@id/signIn"/>
    <EditText
        android:id="@+id/enterCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signIn"
        android:hint="Введите проверочный код"
        tools:ignore="Autofill,HardcodedText"
        android:layout_marginTop="20dp"
        android:inputType="text" />
    <Button
        android:id="@+id/sendCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/enterCode"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:text="Отправить"
        tools:ignore="HardcodedText"
        android:textSize="15sp"
        android:backgroundTint="#ffcc99"/>
    <TextView
        android:id="@+id/textIfResendCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:text="Код не пришел?"
        tools:ignore="HardcodedText"
        android:textSize="12sp"
        android:layout_below="@id/sendCode"/>

</RelativeLayout>