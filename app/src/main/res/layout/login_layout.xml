<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="30dp">

    <TextView
        android:id="@+id/textLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:text="Вход"
        tools:ignore="HardcodedText"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/enterLogIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textLogin"
        android:layout_marginTop="40dp"
        android:hint="Адрес электронной почты"
        tools:ignore="HardcodedText,TextFields, Autofill" />
    <EditText
        android:id="@+id/enterPassWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/enterLogIn"
        android:hint="Пароль"
        tools:ignore="Autofill,HardcodedText"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/logIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/enterPassWord"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="  Войти  "
        tools:ignore="HardcodedText"
        android:textSize="20sp"
        android:backgroundTint="#ffcc99"/>
    <TextView
        android:id="@+id/textIfNotRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Еще не зарегистрированы?"
        tools:ignore="HardcodedText"
        android:textSize="12sp"
        android:layout_below="@id/logIn"/>
    <TextView
        android:id="@+id/textIfForgetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Забыли пароль?"
        tools:ignore="HardcodedText"
        android:textSize="12sp"
        android:layout_below="@id/textIfNotRegister"/>
</RelativeLayout>