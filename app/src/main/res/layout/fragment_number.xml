<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="80dp"
        android:text="Title"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="30dp"
        android:scrollbarThumbVertical="@null"
        android:scrollbars="vertical"
        android:text="Text"
        android:textSize="19sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/like"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:gravity="center"
            android:src="@drawable/ic_like_before"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/countLikes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/like"
            android:gravity="center"
            android:text="0" />

        <ImageButton
            android:id="@+id/comment"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/countLikes"
            android:layout_alignParentRight="true"
            android:layout_marginTop="60dp"
            android:src="@drawable/ic_com_try"
            tools:ignore="SpeakableTextPresentCheck" />
        <TextView
            android:id="@+id/countComms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/like"
            android:gravity="center"
            android:text="0" />

        <ImageButton
            android:id="@+id/repost"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/comment"
            android:layout_alignParentRight="true"
            android:layout_marginTop="60dp"
            android:src="@drawable/ic_lrep_try"
            android:textSize="11sp"
            tools:ignore="SpeakableTextPresentCheck" />
        <TextView
            android:id="@+id/countReposts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/like"
            android:gravity="center"
            android:text="0" />
    </LinearLayout>


</RelativeLayout>